<section class="about_bottom_sec">
<div class="about-section-form">
  {{ section.settings.block_para }}
</div>
  	<div class="Get-in-touch">
     {{ section.settings.touch_head }}
  		<a href="{{ section.settings.banner_btn_link }}" class="add_txt">{{ section.settings.landing_btn }}</a>
	</div>
</section>
		  
<style>
.about-section-form p {
    color: #b48e7b;
    font-size: 16px;
    line-height: 22px;
    max-width: 90%;
    margin: 20px auto;
    text-align: left !important;
}
  .Get-in-touch a.add_txt:hover{
   background: #b48e7b;
    color:#ffffff; 
  }
  
.about-section-form {
    max-width: 700px;
    background: #fff;
    box-shadow: 0 0 5px #ccc;
    padding: 20px;
    margin: 0 auto;
    min-height: 280px;
    position: relative;
    margin-top: -9em;
  	padding-top:30px;
}
.Get-in-touch {
    background: #444;
    max-width: 400px;
    margin: -40px auto 0 auto;
    padding: 15px;
  position:relative;
  gap:20px;
  display:flex;
  flex-wrap:wrap;
  justify-content:space-evenly;
  align-items:center;
}
  .Get-in-touch p {
    color: #fff;
    font-family: "playfair Display";
    font-style: italic;
    font-size: 18px;
    line-height: 24px;
    letter-spacing: 1px;
    max-width: 50%;
    text-align: center;
    margin:0;
}
.Get-in-touch a.add_txt {
    color: #fff;
    border: 1px solid #b48e7b;
    padding: 10px 25px;
}
 @media screen and (max-width:767px) {
  .about-section-form {
    margin-top: -6em;
  } 
   
 }
  
@media screen and (max-width:575px) { 
  
   .Get-in-touch p {
     font-size: 16px;
     line-height: 22px;
     letter-spacing: 1px;
     max-width: 100%;
     margin: 0;
	}
  
   .about-section-form p {
    font-size: 15px;
    line-height: 22px;
     max-width:100%;
   }
  
  .Get-in-touch {
    width: 90%;
  }
}
  
 @media screen and (max-width:480px) {  
  .Get-in-touch {
    margin: 0 auto;
  }
 }
</style>  

{% schema %}
{
  "name": "about section form",
  "settings": [
     {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    },

		{
			"type": "richtext",
			"id":	"block_para",
			"label":	"text"
		 },

		
		{
			"type": "richtext",
			"id":	"touch_head",
			"label":	"heading"
		 },


		 {
            "id": "banner_btn_link",
            "type": "url",
            "label": "Button link"
          },

		 {
            "id": "landing_btn",
            "type": "text",
            "label": "Button"
          }
 	],
  

   "presets": [
     {
       "name": "about section form",
       "settings": {
          "title": "banner"
        }
     }
   ]
}
{% endschema %}



