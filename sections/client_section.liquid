			{
			   "type": "image_picker",
			   "id": "client_block_img",
			   "label": "Image"
			}
		
       ]
     }
   ],

   "presets": [
     {
       "name": "client block",
       "settings": {
          "title": "client block"
        }
     }
   ]
}
{% endschema %}



