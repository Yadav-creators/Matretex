{
  "name": "client block",
  "settings": [
     {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    },
		{
			"type": "url",
			"id": "client_link",
			"label": "Link"
		},  
			
		{
           "type": "image_picker",
           "id": "client_img",
           "label": "Image"
         },
 		{
			"type": "richtext",
			"id":	"block_heading",
			"label":	"text"
		 },
		 {
			"type": "richtext",
			"id":	"block_txt",
			"label":	"text"
		 },
		 {
			"type": "text",
			"id":	"eee-content",
